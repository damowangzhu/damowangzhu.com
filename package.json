{
  "name": "vite2-vue3-typescript",
  "version": "2.0.0",
  "description": "vite2 vue3 SSR typescript vuex vue-router",
  "author": "damowangzhu",
  "scripts": {
    "dev": "npm-run-all -p start lint",
    "start": "node server",
    "lint": "esw -w --cache --color --ext .ts,.vue,.tsx src/ --cache-location node_modules",
    "build": "yarn build:client && yarn build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.js --outDir dist/server",
    "serve": "cross-env NODE_ENV=production node server",
    "preview": "npm-run-all -p build serve"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "vue": "^3.0.7",
    "vue-router": "^4.0.4",
    "vuex": "^4.0.0",
    "vuex-router-sync": "^6.0.0-rc.1"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "@vitejs/plugin-vue": "^1.1.5",
    "@vitejs/plugin-vue-jsx": "^1.1.2",
    "@vue/compiler-sfc": "^3.0.7",
    "@vue/server-renderer": "^3.0.7",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.14.0",
    "eslint-plugin-vue": "^7.5.0",
    "eslint-watch": "^7.0.0",
    "express": "^4.17.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.30.0",
    "typescript": "^4.1.2",
    "vite": "^2.0.4",
    "vite-plugin-eslint": "^1.1.0"
  },
  "license": "MIT"
}
